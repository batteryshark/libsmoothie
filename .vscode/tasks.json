{
    "version": "2.0.0",
    "tasks": [
        // -- [COMMON TASKS] -- 
        {
            "label": "Create Binary Path",
            "type": "shell",
            "osx": {
                "command": "mkdir -p ./bin"
            },
            "linux": {
                "command": "mkdir -p ./bin"
            },
            "windows": {
                "command": "cmd",
                "args": [
                    "/C",
                    "if not exist .\\bin mkdir .\\bin"
                ]
            }
        },
        {
            "label": "Build Binaries [Windows 64-bit]",
            "dependsOn": [
                "Create Binary Path",
                "Test Libsmoothie [Windows 64-bit]",
                "Libsmoothie DLL [Windows 64-bit]"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },    
        {
            "label": "Build Binaries [Linux 64-bit]",
            "dependsOn": [
                "Create Binary Path",
                "Test Libsmoothie [Linux 64-bit]",
                "Libsmoothie Shared [Linux 64-bit]"                
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },              
        {
            "label": "Test Libsmoothie [Windows 64-bit]",
            "type": "shell",
            "command": [
                "x86_64-w64-mingw32-g++",
                "--std",
                "c++17",               
                "-fshort-wchar",
                "${workspaceFolder}/src/mount_utils_windows.cpp",         
                "${workspaceFolder}/src/utils.cpp",                   
                "${workspaceFolder}/src/mapmanager.cpp",                
                "${workspaceFolder}/src/mountmanager.cpp",
                "${workspaceFolder}/src/libsmoothie.cpp",  
                "${workspaceFolder}/src/test_libsmoothie.cpp",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-lgcc",
                "-lvirtdisk",
                "-o ${workspaceFolder}/bin/test_libsmoothie.exe"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },        
        {
            "label": "Libsmoothie DLL [Windows 64-bit]",
            "type": "shell",
            "command": [
                "x86_64-w64-mingw32-g++",
                "--std",
                "c++17",
                "-shared",
                "-fshort-wchar",
                "${workspaceFolder}/src/mount_utils_windows.cpp",         
                "${workspaceFolder}/src/utils.cpp",                   
                "${workspaceFolder}/src/mapmanager.cpp",                
                "${workspaceFolder}/src/mountmanager.cpp",
                "${workspaceFolder}/src/libsmoothie.cpp",  
                "${workspaceFolder}/src/test_libsmoothie.cpp",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-lgcc",
                "-lvirtdisk",
                "-o ${workspaceFolder}/bin/libsmoothie.dll"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },         
        {
            "label": "Test Libsmoothie [Linux 64-bit]",
            "type": "shell",
            "command": [
                "g++",
                "--std",
                "c++17",               
                "${workspaceFolder}/src/mount_utils_linux.cpp",         
                "${workspaceFolder}/src/utils.cpp",                   
                "${workspaceFolder}/src/mapmanager.cpp",                
                "${workspaceFolder}/src/mountmanager.cpp",
                "${workspaceFolder}/src/libsmoothie.cpp",  
                "${workspaceFolder}/src/test_libsmoothie.cpp",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-lgcc",
                "-o ${workspaceFolder}/bin/test_libsmoothie.elf"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Libsmoothie Shared [Linux 64-bit]",
            "type": "shell",
            "command": [
                "g++",
                "--std",
                "c++17",
                "-shared",
                "-fPIC",
                "${workspaceFolder}/src/mount_utils_linux.cpp",         
                "${workspaceFolder}/src/utils.cpp",                   
                "${workspaceFolder}/src/mapmanager.cpp",                
                "${workspaceFolder}/src/mountmanager.cpp",
                "${workspaceFolder}/src/libsmoothie.cpp",
                "-static-libgcc",
                "-static-libstdc++",
                "-lgcc",
                "-o ${workspaceFolder}/bin/libsmoothie.so"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }                              
    ]
}